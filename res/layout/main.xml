<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" android:weightSum="1">


    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/bluetoothStatusView"
            android:id="@+id/bluetoothStatusView"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            />
    <Button
            android:id="@+id/connectBluetoothButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/connectButton"
            android:layout_marginBottom="10dp"
            android:onClick="connectBluetoothHandler"
            />

    <Button
            android:id="@+id/findDevicesButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/findDevicesButton"
            android:onClick="findDevicesHandler"
            />



</LinearLayout>

